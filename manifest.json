{
  "manifest_version": 3,
  "name": "Kazarinov Price Offer",
  "version": "1.0",
  "description": "Генерирует структурированное описание компонентов на русском и иврите",

  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "web_accessible_resources": [
    {
      "resources": [ "result.html" ],
      "matches": [ "<all_urls>" ]
    }
  ],

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}